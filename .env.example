# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_app_platform

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth
NEXTAUTH_SECRET=your-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Optional: Email configuration (for future provider support)
# EMAIL_SERVER_HOST=smtp.example.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@example.com
# EMAIL_SERVER_PASSWORD=your-email-password
# EMAIL_FROM=noreply@example.com

# LiteLLM Gateway Configuration
LITELLM_BASE_URL=http://localhost:4000
LITELLM_TIMEOUT=30000
# Set to 'mock' to use mock gateway for testing without LiteLLM server
LITELLM_MODE=production

# Langfuse Observability (optional)
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_BASE_URL=https://cloud.langfuse.com
# For frontend trace links (make it public)
NEXT_PUBLIC_LANGFUSE_BASE_URL=https://cloud.langfuse.com

# AI Provider API Keys (used by LiteLLM)
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI
GOOGLE_API_KEY=your-google-api-key

# Azure OpenAI
AZURE_API_KEY=your-azure-api-key
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2023-12-01-preview

# Other providers (add as needed)
# COHERE_API_KEY=your-cohere-api-key
# HUGGINGFACE_API_KEY=your-huggingface-api-key