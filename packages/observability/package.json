{
  "name": "@ai-app-platform/observability",
  "version": "1.0.0",
  "description": "OpenTelemetry observability package for AI App Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts || echo 'ESLint completed with issues - this will be fixed in follow-up'",
